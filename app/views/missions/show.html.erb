<div style="margin: 5px; height: 100%; width: 100%; margin: 0 auto; font-size: 15px; height: 25px;">
  <p class="bg-primary">ミッション情報</p>
</div>

<div style="margin: 5px; height: 140px; width: 85%; margin: 10px 25px; font-size: 15px;">
  <div class="caption" style="padding: 0;">
     <h4><%= @mission_info[:mission_title] %></h4>
  </div>
       <%= link_to image_tag(@mission_info[:mission_image_url],
                      border: 0, size: '119x95', style:'border-radius: 5px'),
                      missions_show_path(@mission_info),
                      style: "display: block; padding: 0px; margin: 3px;float:left;" %>
       <div style="margin: 10px;float:left; width: 125px;">
         <p><%= @mission_info[:mission_summary] %></p>
       </div>
</div>

<div style="margin: 5px; height: 100%; width: 100%; margin: 10px 0 auto; font-size: 15px; height: 25px;clear:left;">
  <p class="bg-primary">目的地情報</p>
</div>
<div style="background-color: white; padding-top: 1px; margin: 10px 25px; ">
  <div>
    <%= image_tag @target_place_detail[:target_place_image_url], border: 0, size: '272x146', style:'border-radius: 10px' %>
  </div>
  <div class="title" style=" height: 20px; margin: 1px auto;">
    <h4 style=" margin: 5px;"><%= @target_place_detail[:name] %></h4>
  </div>

  <div class="destination-info" style="border: 1px; height: 80px; margin: 5px;">
  	<div style="height: 100%; margin: 5px;">
  	  	<div>
          <span>住所: </span>
          <span><%= @target_place_detail[:address] %></span>
  	  	</div>
  	  	<div>
          <span>電話番号: </span>
          <span><%= @target_place_detail[:tel] %></span>
  	  	</div>
  	  	<div>
          <%= link_to 'MAP', '#', id: "map_btn", "data-tooltip" => "#html_map", class: "btn btn-info" %>
          <div id="html_map" style="display: none;">
            <%=  image_tag 'map/' + @target_place_detail[:map_url], border: 0, size: '250x250' %>
          </div>
  	  </div>
    </div>
  </div>

  <div class="mission-detail" style=" height: 50px; margin: 10px;">
      <p><%= @target_place_detail[:abustract] %></p>
  </div>

  <div class="btn-field" style="margin: 0 auto; padding: 5px; width: 70%;">
    <%= link_to "キャンセル", missions_index_path, class: "btn btn-primary loading",
        style: "margin-right: 10px; float: left;" %>
    <%= button_to "決定", missions_create_path(@data), class: "btn btn-primary loading-confirm",
        confirm: "ミッションを決定してもいいですか？" %>
  </div>
</div>

