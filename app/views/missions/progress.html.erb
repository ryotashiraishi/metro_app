<div>
  <%= render 'missions/station_info' %>

  <div style="background-color: white; padding-top: 1px; overflow: auto;
              height: 200px; margin: 0 10px;">
  <div class="title" style="background-color: blueviolet; height: 50px;
                            color: white; margin: 10px;">
    <p><%= @target_place_detail[:name] %></p>
  </div>

  <div class="destination-info" style="background-color: pink; height: 80px; color: white; margin: 10px;">
  	<div style="height: 100%;">
  	  <div style="height: 60px; width: 60px; float: left;">
  	  	<%=  image_tag 'mission/image_' + @target_place_detail[:station_no] + '_' + @target_place_detail[:target_place_no] + '.jpg', border: 0, size: '60x60' %>
  	  	<%#= image_tag @target_place_detail[:image_url], border: 0, size: '60x60' %>
  	  </div>
  	  <div style="margin-left: 80px;">
  	  	<div>
          <span>住所: </span>
          <span><%= @target_place_detail[:address] %></span>
  	  	</div>
  	  	<div>
          <span>電話番号: </span>
          <span><%= @target_place_detail[:tel] %></span>
  	  	</div>
  	  	<div>
          <%= link_to 'MAP', '#', id: "map_btn", "data-tooltip" => "#html_map", class: "btn btn-info" %>
          <div id="html_map" style="display: none;">
            <%=  image_tag 'map/' + @target_place_detail[:map_url], border: 0, size: '250x250' %>
          </div>
  	  	</div>
  	  </div>
    </div>
  </div>

  <div class="mission-detail" style="background-color: skyblue; height: 200px;
                                     color: white; margin: 10px; overflow: auto;">
  	<div class="mission-abstract" 
  	     style="background-color: darkblue; height: 50px; margin: 10px;">
  	  <p><%= @target_place_detail[:abustract] %></p>
  	</div>
  	<div class="mission-pr1" style="background-color: gray; height: 50px; margin: 10px;">
  	  <p><%= @target_place_detail[:pr1] %></p>
  	</div>
  	<div class="mission-pr2" style="background-color: gray; height: 50px; margin: 10px;">
  	  <p><%= @target_place_detail[:pr2] %></p>
  	</div>
  	<div class="mission-pr3" style="background-color: gray; height: 50px; margin: 10px;">
  	  <p><%= @target_place_detail[:pr3] %></p>
  	</div>
  </div>

  </div>

  <%= form_tag 'capture', enctype: "multipart/form-data" do %>
    <%= hidden_field_tag 'user_no', @current_trip_info[:user_no] %>
    <%= hidden_field_tag 'trip_no', @current_trip_info[:trip_no] %>
    <%= hidden_field_tag 'do_no',  @current_trip_info[:do_no] %>
    <%= hidden_field_tag 'station_no',  @data[:station_no] %>
    <%= hidden_field_tag 'mission_no',  @data[:mission_no] %>

    <div style="height:1px;width:1px;overflow:hidden;margin-left:-999px">
      <input id="photo_content" name="photo_content" type="file" accept="image/*">
    </div>
    <div>
      <%= image_tag asset_path("camera.png"), {id: 'camera_btn', width: '60'} %>
    </div>
    <%= submit_tag 'preview', id: 'submit_btn', class: "display-none-style loading" %>
  <% end %>


  <div class="btn-field" style="margin: 5px; padding: 5px;">
  	<div style="width: 90%; margin: 0 auto;">
      <%= link_to "ミッションを変更する",
          missions_destroy_path(@data), method: :delete, class: "btn btn-primary loading-confirm",
          style: "float: left; margin-right: 10px;", confirm: "進行中のミッションを変更しますか？" %>
      <%= button_to "満足した", missions_complete_path(@data), class: "btn btn-primary loading-confirm", confirm: "ミッションを満足しましたか？" %>
    </div>
  </div>

</div>

<script>
  $(function(){
    $('#camera_btn').click(function() {
      $("#photo_content").trigger('click');
    });

    $('#photo_content').change(function(){
      $('#submit_btn').click();
    });
  })
</script>
